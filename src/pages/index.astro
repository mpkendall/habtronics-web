---
import Layout from "../layouts/Layout.astro";
import Carousel from "../components/Carousel.astro";
---

<Layout>
	<!-- Hero -->
	<section
		class="flex flex-row justify-between items-center bg-gradient-to-b from-[#00172D] to-[#3c51a6] text-white px-6 py-16 rounded-[30px] w-[1150px] h-[670px] mx-auto"
	>
		<div class="text-left space-y-4 ml-[100px] fade-up">
			<h1 class="text-7xl font-bold font-sora leading-tight">
				Open access <br /> to the <br /> stratosphere
			</h1>
			<p class="text-xl font-inter">
				Facilitating open access to upper air environments <br /> to pioneer
				education and research opportunities
			</p>
			<a
				href="#what-we-do"
				class="inline-block bg-black text-white font-semibold py-3 px-5 mt-4 rounded-md shadow-md transition hover-50"
			>
				Learn More
			</a>
		</div>
		<div class="float-in">
			<img
				src="/balloon.png"
				alt="High-altitude balloon"
				class="w-auto max-w-sm mx-auto h-[550px] mr-[100px]"
			/>
		</div>
	</section>

	<!-- In Action -->
	<section class="bg-[#FDF9F5] py-10">
		<Carousel
			title="In Action"
			slides={[
				{
					imgSrc: "/images/burst.jpg",
					imgAlt: "High-altitude balloon burst at high-altitude",
				},
				{
					imgSrc: "/images/launch1.jpg",
					imgAlt: "Balloon launch",
				},
				{
					imgSrc: "/images/Earth5.jpg",
					imgAlt: "View of earth at high-altitude",
				},
				{
					imgSrc: "/images/stratoscience.jpg",
					imgAlt: "Stratoscience student payload",
				},
			]}
		/>
	</section>

	<!-- Why It Matters -->
	<section
		class="flex flex-col justify-center bg-[#FDF9F5] py-10 mx-auto items-center"
	>
		<video autoplay muted loop class="w-[1150px] h-auto rounded-[30px]">
			<source
				src="/videos/Habtronics_BannerVideo.mp4"
			/>
		</video>
	</section>

	<!-- Call to Action -->
	<section
		class="flex flex-col justify-center bg-[#FDF9F5] py-10 mx-auto items-center"
	>
		<h2 class="text-4xl font-sora font-extrabold text-left w-[1150px] mb-4">
			Call to Action
		</h2>
		<div class="flex flex-row gap-4">
			<a
				href=""
				class="inline-block bg-black text-white font-semibold py-3 px-5 mt-4 rounded-md shadow-md transition hover-50 w-[250px] text-center"
			>
				Launch <br /> Resources
			</a>
			<a
				href=""
				class="inline-block bg-black text-white font-semibold py-3 px-5 mt-4 rounded-md shadow-md transition hover-50 w-[250px] text-center"
			>
				School <br /> Resources
			</a>
			<a
				href="/contact"
				class="inline-block bg-black text-white font-semibold py-3 px-5 mt-4 rounded-md shadow-md transition hover-50 w-[250px] text-center"
			>
				Contact <br /> Us
			</a>
		</div>
	</section>
</Layout>

<style>
	@keyframes fadeUp {
		from {
			opacity: 0;
			transform: translateY(60px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes floatIn {
		from {
			opacity: 0;
			transform: translateX(100px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	.fade-up {
		animation: fadeUp 1.5s ease-out forwards;
	}

	.float-in {
		animation: floatIn 1.5s ease-out forwards;
	}
</style>
                                                